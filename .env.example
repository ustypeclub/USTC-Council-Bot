# Example environment configuration for Votum

# Discord bot token and client details
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN
DISCORD_CLIENT_ID=YOUR_DISCORD_CLIENT_ID
DISCORD_CLIENT_SECRET=YOUR_DISCORD_CLIENT_SECRET

# OAuth redirect URI for the dashboard (must match the URL configured in Discord Developer Portal)
OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/callback

# Secret key used to sign JWT session cookies (random string)
SECRET_KEY=change_this_super_secret_key

# Path to the SQLite database file
DATABASE_URL=bot.db

# Whether to enable debug logging (true/false)
DEBUG=false

# Guild ID(s) where the bot should initially sync application commands (commaâ€‘separated)
INITIAL_GUILD_IDS=

# Optional: set HTTPS=true when deploying behind TLS to enable secure cookies
HTTPS=false